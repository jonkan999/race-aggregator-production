{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "source": "functions",
    "codebase": "api-functions"
  },
  "hosting": [
    {
      "target": "sedev",
      "public": "build/se",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"]
    },
    {
      "target": "seprod",
      "public": "build/se",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"]
    },
    {
      "target": "nodev",
      "public": "build/no",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"]
    },
    {
      "target": "noprod",
      "public": "build/no",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"]
    }
  ]
}
